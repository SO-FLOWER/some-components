{
  "name": "@ljdy.test/topbar",
  "version": "1.2.0",
  "dependencies": {
    "bcore": "0.0.18",
    "echarts": "^5.0.0",
    "jquery": "2.1.4",
    "lodash": "4.6.1"
  },
  "datav": {
    "cn_name": "topbar",
    "icon": "/icon/topbar.jpg",
    "protocol": 2,
    "type": [
      "regular"
    ],
    "view": {
      "width": "400",
      "height": "200",
      "minWidth": "200",
      "minHeight": "100"
    },
    "apis": {
      "source": {
        "handler": "render",
        "description": "接口描述",
        "fields": {
          "value": {
            "description": "值说明"
          }
        }
      }
    },
    "config": {
      "xAxis": {
        "name": "x轴",
        "type": "group",
        "children": {
          "show": {
            "name": "显示",
            "type": "boolean",
            "default": true
          },
          "rotate": {
            "name": "名称旋转",
            "type": "number",
            "default": null
          },
          "color": {
            "name": "颜色",
            "type": "color",
            "default": "rgba(255,255,255,.7)"
          },
          "fontStyle": {
            "name": "字体样式",
            "type": "text",
            "default": "normal"
          },
          "fontWeight": {
            "name": "字体粗细",
            "type": "text",
            "default": "normal"
          },
          "fontFamily": {
            "name": "字体",
            "type": "text",
            "default": "sans-serif"
          },
          "fontSize": {
            "name": "字号",
            "type": "number",
            "default": 16
          }
        }
      },
      "grid": {
        "name": "网格",
        "type": "group",
        "children": {
          "show": {
            "name": "显示",
            "type": "boolean",
            "default": true
          },
          "left": {
            "name": "左侧",
            "type": "text",
            "default": "10%"
          },
          "top": {
            "name": "顶部",
            "type": "text",
            "default": "20%"
          },
          "right": {
            "name": "右侧",
            "type": "text",
            "default": "10%"
          },
          "bottom": {
            "name": "底部",
            "type": "text",
            "default": "15%"
          },
          "width": {
            "name": "宽度",
            "type": "text",
            "default": "auto"
          },
          "height": {
            "name": "高度",
            "type": "text",
            "default": "auto"
          },
          "containLabel": {
            "name": "自适应布局",
            "type": "boolean",
            "default": false
          },
          "backgroundColor": {
            "name": "背景色",
            "type": "multicolor",
            "default": {
              "style": "single",
              "value": "rgba(0,0,0,0)"
            }
          },
          "borderColor": {
            "name": "边框色",
            "type": "multicolor",
            "default": {
              "style": "single",
              "value": "#ccc"
            }
          },
          "borderWidth": {
            "name": "边框粗细",
            "type": "number",
            "default": 0
          }
        }
      },
      "topNum": {
        "name": "柱图上的数字",
        "type": "group",
        "children": {
          "show": {
            "name": "显示",
            "type": "boolean",
            "default": true
          },
          "fontStyle": {
            "name": "字体样式",
            "type": "text",
            "default": "normal"
          },
          "fontWeight": {
            "name": "字体粗细",
            "type": "text",
            "default": "normal"
          },
          "fontFamily": {
            "name": "字体",
            "type": "text",
            "default": "sans-serif"
          },
          "fontSize": {
            "name": "字号",
            "type": "number",
            "default": 16
          },
          "color": {
            "name": "颜色",
            "type": "color",
            "default": "rgba(255,255,255,.7)"
          },
          "height":{
             "name":"高度",
             "type":"number",
             "default":16
          },
          "leftbar": {
            "name": "左数位置",
            "type": "number",
            "default": 20,
            "col": 12
          },
          "topleft": {
            "name": "左数高度",
            "type": "number",
            "default": 50,
            "col": 12
          },
          "rightbar": {
            "name": "右数位置",
            "type": "number",
            "default": 20,
            "col": 12
          },
          "topright": {
            "name": "右数高度",
            "type": "number",
            "default": 50,
            "col": 12
          }
        }
      }
    },
    "api_data": {
      "source": [
        {
          "x": "医生(人)",
          "y1": 20,
          "y2": 38
        },
        {
          "x": "护士(人)",
          "y1": 50,
          "y2": 34
        },
        {
          "x": "床位(人)",
          "y1": 82,
          "y2": 32
        }
      ]
    }
  }
}